<h1>Página de Geração de Quantidade Média de Resíduos Cadastrados Dividido por Tipo</h1>

<% @collection = Collection.last %>
<table>
    <thead>
        <tr>
            <th>Quantidade Média de Resíduos Cadastrados por Tipo</th>
            <tr>
                <th>Tipo</th>
                <th>Média</th>
                <th colspan="3"></th>
            </tr>
        </tr>
    </thead>
    
    <tbody>
        <% @collection.generate_mean_type %>
        <tr>
          <td>Sólido Orgânico</td>
          <td><%= @collection.solido_organico_mean %> kg</td>
        </tr>
        <tr>
          <td>Sólido Inorgânico</td>
          <td><%= @collection.solido_inorganico_mean %> kg</td>
        </tr>
        <tr>
          <td>Líquido Orgânico</td>
          <td><%= @collection.liquido_organico_mean %> kg</td>
        </tr>
        <tr>
          <td>Líquido Inorgânico</td>
          <td><%= @collection.liquido_inorganico_mean %> kg</td>
        </tr>
        <tr>
          <td>Líquido Inflamável</td>
          <td><%= @collection.liquido_inflamavel_mean %> kg</td>
        </tr>
        <tr>
            <td>Outros</td>
            <td><%= @collection.outros_mean %> kg</td>
        </tr>
    </tbody>
</table>
<br>