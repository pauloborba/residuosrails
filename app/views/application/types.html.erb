  </thead>

  <tbody>
    <% if !@residues.empty? %>
      <% @residues.each do |residue| %>
        <tr>
          <td><%= residue.name %></td>
          <td><%= residue.kind %></td>
          <td><%= residue.weight %></td>
          <td><%= Laboratory.find(residue.laboratory_id).name%></td>
          <td><%= Department.find(residue.laboratory_id).name %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>Lista vazia</td>
      <>
    <% end %>
  </tbody>
</table>
